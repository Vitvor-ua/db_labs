generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  id        String     @id @unique @default(uuid()) @db.Uuid
  questions Question[]
}

model Question {
  id          String  @id @unique @default(uuid()) @db.Uuid
  header      String  @db.VarChar(255)
  description String? @db.Text
  quiz_id     String  @db.Uuid

  quiz  Quiz   @relation(fields: [quiz_id], references: [id], onDelete: Cascade)
  types Type[]
  variants Variant[] // Added reverse relation for Variant.question
}

model Type {
  id          String  @id @unique @default(uuid()) @db.Uuid
  description String? @db.Text
  question_id String @db.Uuid

  question Question @relation(fields: [question_id], references: [id], onDelete: Cascade)
}
model Variant {
  id          String  @id @unique @default(uuid()) @db.Uuid
  question_id String @db.Uuid
  text        String  @db.Text

  question     Question    @relation(fields: [question_id], references: [id], onDelete: Cascade)
  selectedVars SelectedVar[]
}

model SelectedVar {
  id         String  @id @unique @default(uuid()) @db.Uuid
  variant_id String @db.Uuid
  answer_id  String @db.Uuid

  variant Variant @relation(fields: [variant_id], references: [id], onDelete: Cascade)
}
